/**
 * \file Reference_Testeur.cpp
 * \brief Test unitaire de la classe de base Reference
 * \author etudiant
 * \version 1.0
 * \date 2019-04-09
 */

#include <gtest/gtest.h>
#include <iostream>
#include "Reference.h"

namespace biblio
{
	class ReferenceTest: public Reference
	{
		public:
			ReferenceTest(const std::string& p_auteurs, const std::string& p_titre,
			        int& p_annee, const std::string& p_identifiant);
			virtual Reference* clone() const;
			virtual std::string reqReferenceFormate() const;
	};

	ReferenceTest::ReferenceTest(const std::string& p_auteurs,
		        const std::string& p_titre, int& p_annee,
		        const std::string& p_identifiant) :Reference(p_auteurs, p_titre, p_annee, p_identifiant){

	}

	Reference* ReferenceTest::clone()
	{
		return new ReferenceTest(*this);
	}

	std::string ReferenceTest::reqReferenceFormate() const{
		std::ostringstream oss;
		oss << Reference::reqReferenceFormate();
		return oss.str();
	}
}

TEST(Reference, Constructeur)
{
	biblio::ReferenceTest uneRefISSN("Albert Einstein", "Mein Kampf", 2030, "ISSN 0395-2037");
}

