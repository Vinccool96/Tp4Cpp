#ifndef JOURNAL_H_
#define JOURNAL_H_

#include "Reference.h"

#include <string>

namespace biblio
{
	class Journal: public Reference
	{
		public:
			const std::string& reqNom() const;
			int reqNumero() const;
			int reqPage() const;
			int reqVolume() const;

		private:
			std::string m_nom;
			int m_volume;
			int m_numero;
			int m_page;
	};

}  // namespace biblio

#endif /* JOURNAL_H_ */
